{
  "description": "The bootstrap components made with styled-components",
  "main": "dist/index",
  "scripts": {
    "precommit": "lint-staged",
    "test": "jest --coverage --collectCoverageFrom=packages/**/src/**/*.js",
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf ./dist",
    "compile": "tsc -p tsconfig.build.json"
  },
  "license": "MIT",
  "author": "Lukas Aichbauer <l.aichbauer@gmail.com>",
  "keywords": [
    "components",
    "react",
    "react-component",
    "ui",
    "styled-components",
    "bootstrap",
    "presentational",
    "stateless",
    "functional"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olegakbarov/bootstrap-styled-components.git"
  },
  "bugs": {
    "url": "https://github.com/olegakbarov/bootstrap-styled-components/issues"
  },
  "homepage": "https://github.com/olegakbarov/bootstrap-styled-components",
  "lint-staged": {
    "./packages/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^4.18.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "jest-styled-components": "^6.3.1",
    "lerna": "^3.16.4",
    "lint-staged": "^8.1.4",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-test-renderer": "^16.7.0",
    "regenerator-runtime": "^0.13.1",
    "styled-components": "^4.1.3"
  },
  "name": "bootstrap-styled-components",
  "dependencies": {
    "@types/react": "^16.9.2",
    "@types/styled-components": "^4.1.19"
  }
}